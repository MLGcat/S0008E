{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/pathtracer.h",
                "${workspaceFolder}/pathtracer.cpp",
                "${workspaceFolder}/Math4D.h",
                "${workspaceFolder}/Math4D.cpp",
                "-o",
                "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}